        <% perguntas.forEach(pergunta => { %>
            <div class="card mb-3">
                <div class="card-body">
                    <h3><%= pergunta.titulo %></h3>
                </div>
                <div class="card-footer">
                    <a href="#" class="btn btn-primary">Responder</a>
                </div>
            </div>
        <%}) %>
    </div>
</body>

